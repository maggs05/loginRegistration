<!DOCTYPE html>
<html lang="en">
<head>
    @model loginRegistration.Models.User
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>

<body>
    <form asp-action="Create" asp-controller="User" method="post">
        <p><span asp-validation-for="FirstName"></span>
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName"></p>

        <p><span asp-validation-for="LastName"></span>
        <label asp-for="LastName"></label>
        <input asp-for="LastName"></p>

        <p><span asp-validation-for="EmailAddress"></span>
        <label asp-for="EmailAddress"></label>
        <input asp-for="EmailAddress"></p>

        <p><span asp-validation-for="Password"></span>
        <label asp-for="Password"></label>
        <input asp-for="Password"></p>

        <p><span asp-validation-for="ConfirmPassword"></span>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword"></p>
        
        <p><input type="submit" value="Register"></p>

    </form>
</body>
</html>